<!-- restaurant Showlist -->
<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 mx-auto border p-3">
      <form action="/restaurants" method="POST"></form>
      <p class="mb-1">
      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            餐廳名字：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="name" name="name" required="required">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="category" name="category">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            推薦程度:1~5
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="number" step="0.1" placeholder="rating" name="rating" min="1" max="5">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            地址：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="location" name="location">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            google map網址：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="google_map" name="google_map">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            電話：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="phone" name="phone">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            描述：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="description" name="description">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            餐廳圖片網址：
          </span>
        </div>
        <div class="col-9">
          <input class="w-100" type="text" placeholder="image address" name="image">
        </div>
      </div>

      <div class="row m-2">
        <div class="col-12">
          <button type="submit" class="btn btn-outline-secondary">Create</button>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>
</div>