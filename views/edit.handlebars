<!-- restaurant Showlist -->
<h1 class="mb-1 restaurant-show-title">修改餐廳資訊</h1>
<div class="container">
  <div class="row min-vw-50">
    <div class="col-12 col-md-10 mx-auto">
      <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              餐廳名字：
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="text" placeholder="name" name="name" value="{{ restaurant.name }}"
              required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              類別：
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="text" placeholder="category" name="category" value="{{ restaurant.category }}"
              required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              推薦程度:1~5
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="number" step="0.1" placeholder="rating" name="rating"
              value="{{ restaurant.rating }}" required="required" min="1" max="5">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              地址：
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="text" placeholder="location" name="location" value="{{ restaurant.location }}"
              required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              電話：
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}"
              required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-2">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              描述：
            </span>
          </div>
          <div class="col-10">
            <input class="w-100" type="text" placeholder="description" name="description"
              value="{{ restaurant.description }}" required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-3">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              餐廳圖片網址：
            </span>
          </div>
          <div class="col-9">
            <input class="w-100" type="text" placeholder="image address" name="image" value="{{ restaurant.image }}"
              required="required">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-3">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              google map網址：
            </span>
          </div>
          <div class="col-9">
            <input class="w-100" type="text" placeholder="google_map" name="google_map"
              value="{{ restaurant.google_map }}">
          </div>
        </div>

        <div class="row m-2">
          <div class="col-4">
            <button type="submit" class="btn btn-outline-secondary">修改好後點擊</button>
            <a href="/">...回去主頁</a>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>